{
    "locals": {
        "url": "http://localhost:8080",
        "name": "Andrew Philip Clark",
        "owner": "Andrew Clark",
        "description": "Ramblings of an immor(t)al demigod",
        "stylesheet_dir": "css",
        "javascript_dir": "js",
        "image_dir": "img",
        "social": {
            "twitter": {
                "profile": "https://twitter.com/acdlite"
            }
        },
        "environment": "preview"
    },
    "output": "./public",
    "ignore": [
        ".DS_Store",
        "**/*/.DS_Store"
    ],
    "plugins": [
        "./plugins/paginator.coffee",
        "./plugins/blog.coffee",
        "./plugins/helpers.coffee"
    ],
    "require": {
        "moment": "moment",
        "_": "underscore",
        "typogr": "typogr"
    },
    "jade": {
        "pretty": true
    },
    "markdown": {
        "smartLists": true,
        "smartypants": true
    },
    "paginator": {
        "perPage": 3
    },
    "port": "8080"
}