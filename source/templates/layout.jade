!!! 5
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      
      block styles
        link(rel='stylesheet', href='/'+locals.css_dir+'/main.css')
      block headscripts
        script(src='/head.js')
  body(class=bodyclass)
    header.site-header
      block header
        div.container
          div.logo
            h1
              a(href=locals.url)= locals.name
    section.site-content
      block content
        div.container
          h2 Hi, everybody!
      block contentfooter
    footer.site-footer
      block footer
      block footerscripts
        script(src='/footer.js')


