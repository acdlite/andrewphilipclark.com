extends layout

include mixins/posts

block content
  div.container
    each article in articles
      mixin post(article)

block prepend contentfooter
  .container
    nav.next-previous
      ul
        if nextPage
          li.previous
            a(href=h.url(nextPage.url)) Older
        if prevPage
          li.next
            a(href=h.url(prevPage.url)) Newer



