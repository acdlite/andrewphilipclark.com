!!! 5
- var h = env.helpers

block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = name
      link(rel='alternate', href=url+'/feed.xml', type='application/rss+xml', title=description)
      
      block styles
        link(rel='stylesheet', href=h.stylesheet_url('main'))
      block headscripts
        script(src=h.javascript_url('head'))
        if environment == 'preview'
          script(src='http://localhost:1337/livereload.js')
  body(class=bodyclass)
    .page-wrap
      header.site-header
        block header
          .container
            .site-logo
              h1
                a(href=h.url('/'))= name
            .site-byline
              p By Andrew Clark
          a.site-banner(href=h.url('/'))
            .rainbow
      section.site-content
        block content
          .container
            h2 Hi, everybody!
        block contentfooter

    .sticky-footer
      footer.site-footer.container 
        block footer
          include footer
    block footerscripts
      script(src=h.javascript_url('footer'))