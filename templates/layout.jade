!!! 5
- var h = env.helpers

block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      title
        block title
          = name
      link(rel='alternate', href=h.url('feed.xml'), type='application/rss+xml', title=description)

      link(rel="apple-touch-icon-precomposed", href=h.image_url('icons/apple-touch-icon-152x152-precomposed.png'))
      link(rel="shortcut icon", href=h.url("favicon.ico"))
      meta(name="msapplication-TileColor" content="#222222")
      meta(name="msapplication-TileImage" content=h.image_url('icons/tileicon.png'))
      
      block styles
        link(rel='stylesheet', href=h.stylesheet_url('main'))
      block headscripts
        //- script(src=h.javascript_url('head'))
        
        if environment == 'preview'
          script(src='http://localhost:1337/livereload.js')

        if environment == 'production'
          script
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-24328012-1');
            ga('send', 'pageview');

  body(class=bodyclass)
    .page-wrap
      header.site-header
        block header
          .container
            .site-logo
              h1
                a(href=h.url('/'))= name
            .site-byline
              p by 
                a(href=(h.url('/hi'))) Andrew Clark
          a.site-banner(href=h.url('/'))
            .rainbow
      section.site-content
        block content
          .container
            h2 Hi, everybody!
        block contentfooter

    .sticky-footer
      a.site-banner(href=h.url('/'))
        .rainbow
      footer.site-footer.container 
        block footer
          include footer
    block footerscripts
      //- script(src=h.javascript_url('footer'))