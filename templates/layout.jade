!!! 5
- var h = env.helpers

block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = name
      link(rel='alternate', href=url+'/feed.xml', type='application/rss+xml', title=description)
      
      block styles
        link(rel='stylesheet', href=h.stylesheet_url('main'))
      block headscripts
        script(src=h.javascript_url('head'))
  body(class=bodyclass)
    header.site-header
      block header
        div.container
          div.logo
            h1
              a(href=h.url('/'))= name
    section.site-content
      block content
        div.container
          h2 Hi, everybody!
      block contentfooter
    footer.site-footer
      block footer
      block footerscripts
        script(src=h.javascript_url('footer'))


